<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EventLandingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#FFFFFF"
                android:src="@drawable/events"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_import_contacts_black_24dp"
                    app:tint="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get the latest updates of events from all the fields in The Apostolic Church, Akwa Ibom Territory"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_margin="12dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdUyo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="6dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:text="Uyo Field"
                        android:textSize="22sp"
                        android:layout_weight="10"
                        style="@style/TextAppearance.AppCompat.Title" />
                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/uyo"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdIk"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Ikot Ekpene Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />
                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ikot_ekpene"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdEket"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Eket Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imga"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdOron"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Oron Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/oron"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdIkabasi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Ikot Abasi Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />
                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imga"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdEtinan"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:paddingLeft="6dp"
                        android:text="Etinan Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />
                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/etinan"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdIkono"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="10dp"
                android:onClick="openEvent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:drawableLeft="@drawable/ic_record_color_12dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Ikono Field"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ikono"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="27dp"
        android:visibility="gone"
        android:elevation="6dp"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_add_black_24dp" />
</RelativeLayout>
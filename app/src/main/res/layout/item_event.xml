<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarySuperLight"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area General Fasting"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/txtVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Towns Area"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat. 12/08/2020"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="10am"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginLeft="30dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This event is for the apostolic fiend head"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>